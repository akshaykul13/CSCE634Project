{
  "manifest_version": 2,

  "name": "LanGauger",
  "description": "Assisted tutoring for learning languages",
  "version": "1.0",

  "background": {
    "scripts": [
      "scripts/store.js",
      "scripts/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "LanGauger"
    //"default_popup": "popup.html"
  },  
  "permissions": [
    "activeTab",
    "contextMenus",
    "https://translate.google.com/*",
    "https://ajax.googleapis.com/"
  ]
}